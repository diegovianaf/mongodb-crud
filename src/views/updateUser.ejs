<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>

  <h1><%= title %> </h1>

  <p class="message">
    <% if (typeof message !== 'undefined') { %>
      <%= message %>
    <% } %>
  </p>

  <div class="form">
    <form action="/update/<%= user._id %>" method="post">
      <div>
        <label for="name">Name</label>
        <input type="text" name="name" placeholder="Enter your name" value="<%= user.name %> ">
      </div>
      <div>
        <label for="age">Age</label>
        <input type="number" name="age" placeholder="Enter your age" value="<%= user.age %>">
      </div>
      <div>
        <label for="email">Email</label>
        <input type="email" name="email" placeholder="Enter your email" value="<%= user.email %>">
      </div>
      <button type="submit">Update</button>
    </form>
  </div>

  <%- include('partials/foot.ejs') %>
</body>
</html>